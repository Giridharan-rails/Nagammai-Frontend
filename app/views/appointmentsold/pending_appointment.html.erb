  $(document).ready(function(){ 
    $("#dt1").each(function(ev)
    {
        if(!$(this).val()) { 
       $(this).attr("placeholder", "dd-mm-yy");
    }
    });
    $("#dt2").each(function(ev)
    {
        if(!$(this).val()) { 
       $(this).attr("placeholder", "dd-mm-yy");
    }
    });    
  });  
</script>


