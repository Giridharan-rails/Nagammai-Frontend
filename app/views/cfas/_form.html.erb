<div class="container cont_pad">
          <div class="card">
            <from class="edit-form">


   <% if cfa["id"].present? %>

      <%= form_for(:cfas, :url => {:controller => 'cfas',:action => 'cfa_update', method: :put}) do |f| %> 

          <%=f.hidden_field 'id',:value=>@cfa["id"]  %>
           <div class="form-group"><label for="exampleInputName">Job Name<span class="required">*</span></label> <%= f.text_field :job_name,:value=>@cfa["job_name"], class:"form-control" ,name: "job_name", required: "true",placeholder: "Job Name"%></div>
            <footer class="form-footer">
          <%=f.submit "Update" , class: "btn btn-primary btn-one load", id: "cfa1"%>
          <%=link_to "Cancel",cfas_path , class: "btn btn-primary load", id: "cfa2"%>
           </footer>
      <% end %>
   <% else %>
      <%= form_for(cfa, :url => {:controller => 'cfas', :action => 'create'}) do |f| %>
           <div class="form-group"><label for="exampleInputName">Job Name<span class="required">*</span></label>  <%= f.text_field :job_name , class:"form-control" ,name: "job_name", required: "true",placeholder: "Job Name"%></div>
           <footer class="form-footer">
          <%=f.submit "Save" , class: "btn btn-primary btn-one load", id:"cfa3"%>
          <%=link_to "Cancel",cfas_path , class: "btn btn-primary load", id: "cfa4"%>
          </footer>
      <% end %>
   <% end %>



</from>
</div>
</div>