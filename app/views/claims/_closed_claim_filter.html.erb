<table id="claims" class="table table-striped table_front table-list-search closed_claims">
  <thead class="tbl-header">
    <tr>
      <th>P.Code</th>
      <th>Claim No</th>
      <th>Claim Date</th>
      <th>Supplier Name</th>
      <th>Description</th>
      <th>Quantity</th>
      <th>Claim Amt</th>
      <th>Settled Amt</th>
      <th>Bill Date</th>
      <th>Bill Number</th>
    </tr>
  </thead>
  <tbody class="scroll">
    <% @claims.each do |claim| %>
    <tr>
      <td><%= claim["product_code"] %></td>
      <td><%= claim["claim_no"] %></td>
      <td><%= claim["claim_date"].to_date.strftime("%d-%m-%Y") %></td>
      <td><%= claim["supplier"]["supplier_name"] %></td>
      <td><%= claim["description"] %></td>
      <td><%= claim["quantity"] %></td>               
      <td><%= claim["claim_amount"] %></td>
      <td><%= claim["settled_amount"] %></td>
      <td><%= claim["bill_date"] %></td>
      <td><%= claim["bill_number"] %></td>
    </tr>
    <% end %>
  </tbody>
</table>