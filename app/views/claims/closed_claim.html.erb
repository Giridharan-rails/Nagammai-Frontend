<section class="users_admin">

  <div class="container-fluid">
    <header>
           <ol class="breadcrumb">
    <%= render_breadcrumbs :tag => :li, :separator => "" %>
  </ol>
      <h3>Closed Claims<span class="float-right">
      <input type="text" name="daterange" id="date" />
      <input placeholder="Search" id="system-search" class="" type="text"></span></h3>
    </header>

    <div class="card_hg claims_radio">
      <div class="tab-content">
        <div class="tab-pane active" id="subject1" role="tabpanel">
          <table id="claims" class="table table-striped table_front table-list-search closed_claims">
            <thead class="tbl-header">
              <tr>
                <th>P.Code</th>
                <th>Claim No</th>
                <th>Claim Date</th>
                <th>Supplier Name</th>
                <th>Description</th>
                <th>Quantity</th>
                <th>Claim Amt</th>
                <th>Settled Amt</th>
                <th>Bill Date</th>
                <th>Bill Number</th>
              </tr>
            </thead>
            <tbody class="scroll">
              <% @claims.each do |claim| %>
              <tr>
                <td><%= claim["product_code"] %></td>
                <td><%= claim["claim_no"] %></td>
                <td><%= claim["claim_date"].to_date.strftime("%d-%m-%Y") %></td>
                <td><%= claim["supplier"]["supplier_name"] %></td>
                <td><%= claim["description"] %></td>
                <td><%= claim["quantity"] %></td>               
                <td><%= claim["claim_amount"] %></td>
                <td><%= claim["settled_amount"] %></td>
                <td><%= claim["bill_date"] %></td>
                <td><%= claim["bill_number"] %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <div class="container-fluid">
    <nav aria-label="Page navigation example" id="page_slider">
      <h1>
        <ul class="pagination">
          <%= will_paginate @claims %>
        </ul>
      </h1> 
    </nav>          
  </div>

</section>

<script type="text/javascript">
$(document).ready(function() {

  var activeSystemClass = $('.list-group-item.active');

  //something is entered in search form
  $('#system-search').keyup(function() {
    var that = this;
    // affect all table rows on in systems table
    var tableBody = $('.table-list-search tbody');
    var tableRowsClass = $('.table-list-search tbody tr');
    $('.search-sf').remove();
    tableRowsClass.each(function(i, val) {

      //Lower text for case insensitive
      var rowText = $(val).text().toLowerCase();
      var inputText = $(that).val().toLowerCase();
      if (inputText != '') {
        $('.search-query-sf').remove();
        tableBody.prepend('<tr class="search-query-sf"><td colspan="11"><strong>Searching for: "' + $(that).val() + '"</strong></td></tr>');
      } else {
        $('.search-query-sf').remove();
      }

      if (rowText.indexOf(inputText) == -1) {
        //hide rows
        tableRowsClass.eq(i).hide();

      } else {
        $('.search-sf').remove();
        tableRowsClass.eq(i).show();
      }
    });
    //all tr elements are hidden
    if (tableRowsClass.children(':visible').length == 0) {
      tableBody.append('<tr class="search-sf"><td class="text-muted" colspan="11">No entries found.</td></tr>');
    }
  });
});
</script>

<script type="text/javascript">
$(function() {
    $('#date').daterangepicker(
