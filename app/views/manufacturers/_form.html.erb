<div class="container cont_pad">
    <div class="card">
        <from class="edit-form">
             
    <% if manufacturer["id"].present? %>
      
        <%= form_for(:manufacturers, :url => {:controller => 'manufacturers',:action => 'manufacturer_update', method: :put}) do |f| %> 
          <%=f.hidden_field 'id',:value=>@manufacturer["id"]  %>
        
            <div class="row">
              <div class="col-md-4">
                <div class="form-group">
                  <label for="exampleInputName">Manufacturer code<span class="required">*</span></label> <%= f.text_field :mfr_code, class: "form-control" ,name: "mfr_code", required: "true", maxlength: "5", value: @manufacturer["manufacturer_code"], readonly: "true"%>
                </div>
              </div>
              <div class="col-md-4">
                <div class="form-group">
                  <label for="exampleInputName">Manufacturer Name<span class="required">*</span></label><%= f.text_field :name, class: "form-control" ,name: "name", required: "true", value: @manufacturer["manufacturer_name"],placeholder: "Manufacturer Name" %>
                </div>
              </div>

              <div class="col-md-4">
                <div class="form-group">
                <label for="exampleInputName">Manufacturer Abbr<span class="required">*</span></label> <%= f.text_field :mfr_abb, class: "form-control" ,name: "mfr_abb", required: "true", value: @manufacturer["manufacturer_abb"], placeholder: "Manufacturer Abbr"%>
                </div>        
              </div>
            </div>
         
            <div class="row">
              <div class="col-md-4">
                <div class="form-group"><label for="exampleInputName">Address One<span class="required">*</span></label> <%= f.text_field :address_one, class: "form-control" ,name: "address_one", value: @manufacturer["address_one"],placeholder: "Address One"%>
                </div>
              </div>

              <div class="col-md-4">
                <div class="form-group">
                  <label for="exampleInputName">Address Two</label> <%= f.text_field :address_two, class: "form-control" ,name: "address_two", value: @manufacturer["addrsss_two"],placeholder: "Address Two"%>
                </div>
              </div>

              <div class="col-md-4">
                <div class="form-group"> 
                  <label for="exampleInputName">Address Three</label> <%= f.text_field :address_three, class: "form-control" ,name: "address_three", value: @manufacturer["addrsss_three"],placeholder: "Address Three"%>
                </div>
              </div>

              </div>
         
            <div class="row">
              <div class="col-md-4">
                <div class="form-group">
                  <label for="exampleInputName">City<span class="required">*</span></label> <%= f.text_field :city, class: "form-control" ,name: "city", value: @manufacturer["city"],placeholder: "City Name",required: "true"%>
                </div>
              </div>

              <div class="col-md-4">
                <div class="form-group"> 
                  <label for="exampleInputName">State<span class="required">*</span></label> <%= f.text_field :state, class: "form-control" ,name: "state", value: @manufacturer["state"],placeholder: "State Name",required: "true"%>
                </div>
              </div>
            </div>
            
            
            
            <footer class="form-footer">
              <%=f.submit "Save" , class: "btn btn-primary btn-one btn-lg load", id: "menu3"%>
              <%=link_to "Cancel",manufacturers_path , class: "btn btn-primary btn-lg load", id: "menu4"%>
            </footer>
        <% end %>
    <% else %>

        <%= form_for(manufacturer, :url => {:controller => 'manufacturers', :action => 'create'}) do |f| %>
   
        <div class="row">
          <div class="col-md-4">
            <div class="form-group">
              <label for="exampleInputName">Manufacturer code<span class="required">*</span></label> <%= f.text_field :mfr_code, class: "form-control" ,name: "mfr_code", required: "true", maxlength: "10"%>
            </div>            
          </div>        

          <div class="col-md-4">
            <div class="form-group">
              <label for="exampleInputName">Manufacturer Abbr<span class="required">*</span></label>
              <%= f.text_field :mfr_abb, class: "form-control" ,name: "mfr_abb", required: "true"%>
            </div>            
          </div>        
 
          <div class="col-md-4">
            <div class="form-group">
              <label for="exampleInputName">Manufacturer Name<span class="required">*</span></label>
              <%= f.text_field :name, class: "form-control" ,name: "name", required: "true"%>
            </div>            
          </div>
        </div>
       
        <div class="row">
          <div class="col-md-4">
            <div class="form-group">
              <label for="exampleInputName">Supplier<span class="required">*</span></label>
              <%=select("new division", "supplier_id",  @suppliers.collect {|p| [ p["supplier_code"]+"-"+p["supplier_name"], p["id"] ] },{:include_blank => "Please select"}, {class: "fold1", required: "true"})%>
            </div>            
          </div>
            
          <div class="col-md-4">
            <div class="form-group">
              <label for="exampleInputName">Address One<span class="required">*</span></label> 
              <%= f.text_field :address_one, class: "form-control" ,name: "address_one",required: "true"%>
            </div>            
          </div>

          <div class="col-md-4">
            <div class="form-group">
              <label for="exampleInputName">Address Two</label> 
              <%= f.text_field :address_two, class: "form-control" ,name: "address_two"%>
            </div>            
          </div>
        </div>

        <div class="row">
          <div class="col-md-4">
            <div class="form-group">
              <label for="exampleInputName">Address Three</label>
              <%= f.text_field :address_three, class: "form-control" ,name: "address_three"%>
            </div>            
          </div>
          
          <div class="col-md-4">
            <div class="form-group">
              <label for="exampleInputName">City<span class="required">*</span></label> 
              <%= f.text_field :city, class: "form-control" ,name: "city",required: "true"%>
            </div>
          </div>
          
          <div class="col-md-4">
            <div class="form-group">
              <label for="exampleInputName">State<span class="required">*</span></label>
              <%= f.text_field :state, class: "form-control" ,name: "state",required: "true"%>
            </div>            
          </div>          
        </div> 
             
            <footer class="form-footer">

            <%=f.submit "Save" , class: "btn btn-primary btn-one btn-lg load", id: "menu3"%>
            <%=link_to "Cancel",manufacturers_path , class: "btn btn-primary btn-lg load", id: "menu4"%>
            </footer>
        <% end %>
   <% end %>
         </from>
    </div>
</div>

<script language="javascript">
  populateCountries("country", "state"); // first parameter is id of country drop-down and 
</script>

<script type="text/javascript">
  $(document).ready(function () {
  //called when key is pressed in textbox
  $("#quantity").keypress(function (e) {
    //if the letter is not digit then display error and don't type anything
  if (e.which != 8 && e.which != 0 && (e.which < 48 || e.which > 57)) {
    //display error message
  $("#errmsg").html("Digits Only").show().fadeOut("slow");
               return false;
            }
        });
  });

</script>
