         <section class="users_admin">
        <div class="container-fluid marketing-index">
          <header class="table-header">
            <ol class="breadcrumb">
              <%= render_breadcrumbs :tag => :li, :separator => "" %>
            </ol>
            <h3>Marketing Titles</h3>
          </header>
          <a href="marketings/new" class="btn_add load" data-target="#exampleModalLabel"><i class="fa fa-plus" aria-hidden="true"></i></a>
          <div class="">

              <table id="example" class="display" width="100%" cellspacing="0">
                <thead>
                  <tr>
                    
                    <th class="th_titles">Jobs</th>
                    <th class="th_edit">Edit</th>
                   <% if @user["role"] == "Admin" %> <th class="th_delete">Delete</th><%end%>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                  <%if @marketings.present? %>
                   
                  <% @marketings.map do |i| %>
                   
                    <td><%= i["job_name"] %> </td>
                    <td><%= link_to '', edit_marketing_path(i["id"]), class:"fa fa-pencil-square-o icon_clr load" %></td>
                    <% if @user["role"] == "Admin" %> <td><%= link_to '', marketings_marketing_delete_path(i["id"]), method: :delete, data: { confirm: 'Are you sure?' }, class:"fa fa-trash-o icon_clr load"%></td><%end%>
                    </tr>
                   
                   <% end %>
        
                </tbody>
                
              </table>
              <%end%>
          </div>          
        </div>
        </section>

  


