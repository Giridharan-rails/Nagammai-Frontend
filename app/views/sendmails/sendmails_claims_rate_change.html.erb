                <div class="col-md-3">
                  <label>From Date</label>
                  <br>
                  <input name="from_date" type="text" id="dt1" class="form-control date" value="<%=@from_date%>" placeholder="dd-M-yy">
                </div>
                
                <div class="col-md-3">
                  <label>To Date</label>
                  <br>                  
                  <input name="to_date" type="text" id="dt2" class="form-control date1" value="<%=@to_date%>" placeholder="dd-M-yy">
                </div>
                <div class="col-md-3">
                  <label>Supplier</label>
                  <br>
                  <%= select_tag "supplier_id", options_for_select(@supplier.map { |obj| [obj['supplier_name'], obj['id']] }), class: "id3", autofocus: true, prompt: "select", required: "true" %>
                </div>
                
                <div class="col-md-3">
                 <label></label>
                 <br>
                    <%=i.submit "Show", class: "btn btn-md btn-primary"%>
                </div>  
                <%=i.hidden_field 'claim_type',:value=>"Rate"%>
              </div>   
              
            </div>
            <%end%>
                   <h3>Send mail - Claims(Rate Change)<%=link_to "Refresh", sendmails_sendmails_claims_rate_change_path, class: "btn-refresh" %></h3>
          <%= form_for(@discount, :url =>{:controller => 'sendmails',:action => 'ratechange_assign'}) do |f| %>  
          <div class="">
            <table id="example" class="table table-striped">
              <thead>
                <tr>
                  <tr>
                  <th>Claim Number</th>
                  <th class="text-center">Claim Date</th>
                  
                  <th class="text-left">Supplier</th>
                
                  <th class="th_send-preview">Preview</th>
<!--                   <th>Ajustment</th>
 -->                  <th class="th_sno" style="text-align: center;"><input class="form-check-input" name="foo" type="checkbox" id="checkAll"></th>
                  
                  </tr>
                </tr>
              </thead>

              


              <tbody>
              
              <%@discounts.map do |i|%>

                <tr>
                  <td ><%=i["claim_number"]%></td>
		   <% claim_date = i["ack_date"].to_date.strftime("%d-%m-%Y") if i["ack_date"].present? %>
                   <td class="text-center"><%=i["ack_date"].to_date.strftime("%d-%m-%Y")%></td>
                    <td class="text-left"><%=i["supplier"]["supplier_name"] if i["supplier"].present?%></td>
                  
                 
                  <td class="td_send-preview">
                    <%=link_to "Preview", claims_rate_change_claim_path(:claim_no=>i["claim_number"], claim_date: claim_date),class: "btn btn-link btn_pad" %>
                  </td>
                
     <!--             <td class="td_send-preview">
                    <!%=link_to "Ajustment", sendmails_rate_change_adjustment_path(:claim_no=>i["claim_no"]),class: "btn btn-link btn_pad" %>
                  </td>
      -->            
                  <th class="td_sno" style="text-align: center;" scope="row"><input class="form-check-input" name="claim_no[]" type="checkbox" value="<%=i["claim_no"]%>"></th>
                </tr>
                 <%end%>
              </tbody>
            </table>
          </div>
        

                <footer class="table-footer table-footer-brd">  
                <%if @discounts.present?%>
                 <%=f.submit "Send" , class: "btn btn-one"%> 
                 <%else%> 
                 <%=f.submit "Send" , class: "btn btn-one", disabled:true%> 
                 <%end%>
                 <%= link_to 'Send All', sendmails_sendmails_claims_rate_change_path(:id =>"RateChange"), class: "btn btn-primary" %>

                 <%=link_to "Cancel",sendmails_path , class: "btn btn-primary"%>
                 </footer>        
                     <%end%>
                    
        </div>


